@model IEnumerable<TipanExamen.Models.Reserva>

@{
    ViewData["Title"] = "Reservas Departamentos";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorPagar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaSalida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorPagar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Correo)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ReservaId">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ReservaId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ReservaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
