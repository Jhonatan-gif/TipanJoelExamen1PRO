@model IEnumerable<TipanExamen.Models.PlanRecompensas>

@{
    ViewData["Title"] = "Plan Recompensa";
}

<h1>Index</h1>

<p>
    <a class ="btn btn-success" asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PuntosAcumulados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoRecompensa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PuntosAcumulados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoRecompensa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Correo)
            </td>
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.PlanRecompensasId">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.PlanRecompensasId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PlanRecompensasId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
